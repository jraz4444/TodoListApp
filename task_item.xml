<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- New LinearLayout for Edit and Delete buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        tools:ignore="ExtraText">
<!--
        <Button
            android:id="@+id/buttonDecrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" /-->

        <!-- TextView to display the current percentage
        <TextView
            android:id="@+id/textViewPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="0%"
            android:textSize="18sp" /-->

        <!-- Increment Button (+)
        <Button
            android:id="@+id/buttonIncrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" /-->

        <CheckBox
            android:id="@+id/checkBoxComplete"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:checked="false" />

        <TextView
            android:id="@+id/textViewTaskDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="task_description" />


        <Button
            android:id="@+id/buttonMoveUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up" />

        <Button
            android:id="@+id/buttonMoveDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Down" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"> <!-- Optional margin for spacing -->

        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="due_date"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/textViewNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="notes"
        android:paddingTop="4dp" />

    <!-- Left label: "Not Important" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Important"
        android:layout_gravity="start"
        android:paddingEnd="8dp"/>

    <TextView
        android:id="@+id/sliderValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"/>


    <SeekBar
        android:id="@+id/slider"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:max="9"
        android:progress="0" />

    <!-- Right label: "Important" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Important"
        android:layout_gravity="end"
        android:paddingStart="8dp"/>


</LinearLayout>
